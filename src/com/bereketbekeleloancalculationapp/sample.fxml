<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="com.bereketbekeleloancalculationapp.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER"/>
    </columnConstraints>
    <CheckBox GridPane.rowIndex="0" GridPane.columnIndex="1" text="Are you a customer?"  fx:id="Calculate"/>
    <Label text="Principal dollar amount" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="dollarAmount" onKeyTyped="#money"/>
    <Label text="Interest rate" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="interestRate"/>
    <Label text="Number of years" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField  GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="numberOfYears"/>
    <Button GridPane.rowIndex="5" GridPane.columnIndex="1" text="Submit" fx:id="submitButton" onAction="#onSubmit"/>


</GridPane>